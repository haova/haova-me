<% 
  const post = (await table('posts').find({ filters: { slug: params.slug, published: true }, sort: { createdAt: -1 } })).data[0];
  if (post) { 
_%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= post.title %></title>

    <meta property="og:title" content="<%= post.title %>">
    <meta property="og:type" content="article" />
    <meta property="og:image" content="<%= post.image %>">
    <meta property="og:url" content="https://www.haova.me/<%= post.slug %>.html">
    <meta name="twitter:card" content="summary_large_image">

    <meta property="og:description" content="<%= post.desc %>">
    <meta property="og:site_name" content="<%= post.title %>">
    <meta name="twitter:image:alt" content="<%= post.title %>">

    <%- await include('./parts/header.ejs') %>
  </head>

  <body class="font-sans select-none">
    <%- await include('./parts/navigator.ejs') %>

    <div class="p-4 max-w-3xl mx-auto min-h-screen">
      <h1
        class="text-center text-xl leading-8 font-semibold bg-white md:text-2xl md:leading-9"
      >
        <%= post.title %>
      </h1>
      <div
        class="my-2 text-center text-xs italic md:text-sm md:not-italic md:static"
      >
        <%= moment(post.createdAt).format('YYYY.MM.DD') %>
      </div>
      <div class="content"><%- post.content %></div>
    </div>

    <%- await include('./parts/footer.ejs') %>
  </body>
</html>
<% } _%>
